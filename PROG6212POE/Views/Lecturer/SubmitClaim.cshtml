@using static PROG6212POE.Models.UserModel
@model PROG6212POE.Models.ClaimModel
@{
    ViewData["Title"] = "Submit Claim";
    var user = ViewBag.User as PROG6212POE.Models.UserModel;
    var role = Context.Session.GetString("UserRole");
}


@if (role != Role.Lecturer.ToString())
{
    <span class="text-muted fst-italic">You don’t have access to these actions</span>
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3 border-0">
        <div class="card-body">
            <h2 class="text-primary text-center mb-3 fw-bold">Submit a New Claim</h2>
            <p class="text-muted text-center mb-4">
                Fill out the form below to submit your claim for review.
            </p>

            <form asp-action="SubmitClaim" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Hidden field to store UserId -->
                <input type="hidden" name="UserId" value="@user.UserId" />

                <!-- Username (Read-only, pre-filled from user) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Username</label>
                    <input type="text" class="form-control shadow-sm bg-light" value="@user.FirstName @user.LastName" readonly />
                    <!-- Hidden field to store username in the claim -->
                    <input type="hidden" name="UserName" value="@user.FirstName @user.LastName" />
                </div>

                <!-- Claim Title (User input) -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Claim Title</label>
                    <input asp-for="Title" class="form-control shadow-sm" placeholder="e.g. Exam Marking Hours" required />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <!-- Hours Worked (User input) -->
                <div class="mb-3">
                    <label asp-for="HoursWorked" class="form-label fw-bold">Hours Worked in the Month</label>
                    <input asp-for="HoursWorked" type="number" step="0.1" class="form-control shadow-sm" placeholder="e.g. 12.5" required />
                    <span asp-validation-for="HoursWorked" class="text-danger small"></span>
                </div>

                <!-- Hourly Rate (Read-only, pre-filled from user) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Hourly Rate (R)</label>
                    <input type="text" class="form-control shadow-sm bg-light" value="@user.HourlyRate.ToString("F2")" readonly />
                    <!-- Hidden field to store hourly rate in the claim -->
                    <input type="hidden" name="HourlyRate" value="@user.HourlyRate" />
                </div>

                <!-- Total Amount (calculated automatically, read-only) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Total Amount (R)</label>
                    <input type="text" id="TotalAmount" class="form-control shadow-sm bg-light" readonly />
                </div>

                <!-- Additional Notes (User input) -->
                <div class="mb-3">
                    <label asp-for="AdditionalNotes" class="form-label fw-bold">Additional Notes</label>
                    <textarea asp-for="AdditionalNotes" class="form-control shadow-sm" rows="3" placeholder="Provide any relevant details (optional)..."></textarea>
                    <span asp-validation-for="AdditionalNotes" class="text-danger small"></span>
                </div>

                <!-- File upload (User input) -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Upload Supplementary Document</label>
                    <input name="SuppDocName" type="file" class="form-control shadow-sm" accept=".pdf" />
                    <div class="invalid-feedback">
                        File must be a PDF and under 10 MB.
                    </div>
                    <small class="text-muted">Only PDF files under 10 MB are allowed.</small>
                </div>

                <!-- Form action buttons -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Overview" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to Overview
                    </a>
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> Submit Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Pre-calculate total on page load
        const hourlyRate = @user.HourlyRate;

        // Automatically calculates Total Amount whenever HoursWorked changes
        document.addEventListener('input', function (e) {
            if (e.target.name === 'HoursWorked') {
                const hours = parseFloat(e.target.value) || 0;
                const total = (hours * hourlyRate).toFixed(2);
                document.getElementById('TotalAmount').value = 'R ' + total;
            }
        });

        // Bootstrap custom validation
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', function (event) {
                    const fileInput = form.querySelector('[name="SuppDocName"]');
                    const file = fileInput.files[0];
                    const maxSize = 10 * 1024 * 1024; // 10 MB

                    // Validate file if uploaded
                    if (file) {
                        if (file.type !== "application/pdf" || file.size > maxSize) {
                            fileInput.classList.add('is-invalid');
                        } else {
                            fileInput.classList.remove('is-invalid');
                        }
                    }

                    // Prevent form submission if invalid
                    if (!form.checkValidity() || fileInput.classList.contains('is-invalid')) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}