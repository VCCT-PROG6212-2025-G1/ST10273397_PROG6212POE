@using static PROG6212POE.Models.UserModel
@model PROG6212POE.Models.UserModel
@{
    ViewData["Title"] = "User Details";
    var claims = ViewBag.Claims as List<PROG6212POE.Models.ClaimModel>;
    var role = Context.Session.GetString("UserRole");
}

@if (role != Role.HR.ToString())
{
    <span class="text-muted fst-italic">You don’t have access to these actions</span>
}

<div class="container mt-4">
    <h1>User Details</h1>
    <hr />

    <!-- User Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Personal Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">User Role</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserRole)</dd>

                <dt class="col-sm-3">Hourly Rate</dt>
                <dd class="col-sm-9">R @Model.HourlyRate.ToString("F2")</dd>
            </dl>
        </div>
    </div>

    <!-- Claims Section -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Claims History</h4>
        </div>
        <div class="card-body">
            @if (claims != null && claims.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Title</th>
                            <th>Hours Worked</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Submitted Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in claims)
                        {
                            <tr>
                                <td>@claim.ClaimId</td>
                                <td>@claim.Title</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.HourlyRate.ToString("F2")</td>
                                <td>R @claim.TotalAmount.ToString("F2")</td>
                                <td>
                                    <span class="badge @(claim.ClaimStatus == "Approved" ? "bg-success" :
                                                                                                   claim.ClaimStatus == "Rejected" ? "bg-danger" :
                                                                                                   "bg-warning text-dark")">
                                @claim.ClaimStatus
                            </span>
                        </td>
                        <td>
                            @* If you add a DateSubmitted property, display it here *@
                            N/A
                        </td>
                        <td>
                            <a asp-controller="PCAM" asp-action="ClaimDetails" asp-route-id="@claim.ClaimId"
                               class="btn btn-sm btn-info">View</a>
                            @if (!string.IsNullOrEmpty(claim.SuppDocPath))
                                    {
                                        <a href="~/uploads/@claim.SuppDocPath"
                                           class="btn btn-sm btn-secondary"
                                           download="@claim.SuppDocName"
                                           target="_blank">
                                            Download Doc
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <td colspan="4" class="text-end"><strong>Total Claims Amount:</strong></td>
                            <td colspan="4"><strong>R @claims.Sum(c => c.TotalAmount).ToString("F2")</strong></td>
                        </tr>
                    </tfoot>
                </table>

                <!-- Summary Statistics -->
                <div class="row mt-3">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total Claims</h5>
                                <p class="display-6">@claims.Count</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-success text-white">
                            <div class="card-body">
                                <h5 class="card-title">Approved</h5>
                                <p class="display-6">@claims.Count(c => c.ClaimStatus == "Approved")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-warning">
                            <div class="card-body">
                                <h5 class="card-title">Pending</h5>
                                <p class="display-6">@claims.Count(c => c.ClaimStatus == "Pending")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-danger text-white">
                            <div class="card-body">
                                <h5 class="card-title">Rejected</h5>
                                <p class="display-6">@claims.Count(c => c.ClaimStatus == "Rejected")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> This user has not submitted any claims yet.
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mb-4">
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit User
        </a>
        <a asp-action="GenerateReport" asp-route-id="@Model?.UserId" class="btn btn-success">
            <i class="bi bi-file-earmark-text"></i> Generate Report
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>