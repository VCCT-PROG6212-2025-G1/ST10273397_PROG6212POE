@using static PROG6212POE.Models.UserModel
@model PROG6212POE.Models.UserModel

@{
    ViewData["Title"] = "User Details";
    // Safely retrieve claims list from ViewBag with null check
    var claims = ViewBag.Claims as List<PROG6212POE.Models.ClaimModel> ?? new List<PROG6212POE.Models.ClaimModel>();
    var role = Context.Session.GetString("UserRole");
}

<div class="container mt-4">
    <h1 class="text-primary fw-bold"><i class="bi bi-person-circle me-2"></i>User Details</h1>

    <div class="text-muted fst-italic small">
        <!-- Role-based access message -->
        @if (role != Role.HR.ToString())
        {
            <span>You don’t have access to these actions</span>
        }
    </div>
    <hr />

    <!-- ========================= USER INFORMATION CARD ========================= -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2"></i><h4 class="mb-0">Personal Information</h4>
        </div>
        <div class="card-body pt-4">
            <dl class="row">
                <dt class="col-sm-4 fw-semibold">User ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>

                <dt class="col-sm-4 fw-semibold">First Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-4 fw-semibold">Last Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-4 fw-semibold">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4 fw-semibold">User Role</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.UserRole)</span>
                </dd>

                <dt class="col-sm-4 fw-semibold">Hourly Rate</dt>
                <dd class="col-sm-8">
                    <span class="fw-bold">R @Model.HourlyRate.ToString("F2")</span>
                </dd>
            </dl>
        </div>
    </div>

    <!-- ========================= CLAIMS HISTORY SECTION ========================= -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex align-items-center">
            <i class="bi bi-receipt me-2"></i><h4 class="mb-0">Claims History</h4>
        </div>
        <div class="card-body">

            @if (claims.Any())
            {
                <!-- Claims Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Title</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Submitted Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in claims)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Title</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate.ToString("F2")</td>
                                    <td class="fw-semibold">R @claim.TotalAmount.ToString("F2")</td>

                                    <!-- Status Badge Handling with null safety -->
                                    <td>
                                        <span class="badge @(claim.ClaimStatus == "Approved" ? "bg-success" :
                                                                                                                  claim.ClaimStatus == "Rejected" ? "bg-danger" :
                                                                                                                  "bg-warning text-dark")">
                                    @claim.ClaimStatus
                                </span>
                            </td>

                                    <!-- Submitted Date -->
                                    <td>@("N/A")</td>

                                    <!-- Action Buttons -->
                                    <td>
                                        <a asp-controller="PCAM" asp-action="ClaimDetails" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-info me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                @if (!string.IsNullOrEmpty(claim.SuppDocPath))
                                        {
                                            <a href="~/uploads/@claim.SuppDocPath"
                                               class="btn btn-sm btn-secondary"
                                               download target="_blank">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <td colspan="4" class="text-end"><strong>Total Claims Amount:</strong></td>
                                <td colspan="4" class="fw-bold">R @claims.Sum(c => c.TotalAmount).ToString("F2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- ========================= SUMMARY STATISTICS ========================= -->
                <div class="row text-center mt-3 g-3">
                    <div class="col-md-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6>Total Claims</h6>
                                <p class="fs-4 fw-bold">@claims.Count</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm bg-success text-white">
                            <div class="card-body">
                                <h6>Approved</h6>
                                <p class="fs-4 fw-bold">@claims.Count(c => c.ClaimStatus == "Approved")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm bg-warning">
                            <div class="card-body">
                                <h6>Pending</h6>
                                <p class="fs-4 fw-bold">@claims.Count(c => c.ClaimStatus == "Pending")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card shadow-sm bg-danger text-white">
                            <div class="card-body">
                                <h6>Rejected</h6>
                                <p class="fs-4 fw-bold">@claims.Count(c => c.ClaimStatus == "Rejected")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- No Claims Message -->
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> This user has not submitted any claims yet.
                </div>
            }
        </div>
    </div>

    <!-- ========================= ACTION BUTTONS ========================= -->
    <div class="d-flex flex-wrap gap-2 mt-2">
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit User
        </a>
        <a asp-action="GenerateReport" asp-route-id="@Model?.UserId" class="btn btn-success">
            <i class="bi bi-file-earmark-text"></i> Generate Report
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
