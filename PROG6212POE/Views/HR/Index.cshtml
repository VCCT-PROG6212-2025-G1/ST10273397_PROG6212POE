@model IEnumerable<PROG6212POE.Models.UserModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Users and Claims</h1>

<div class="row">
    <!-- Users Table -->
    <div class="col-md-6">
        <h3>Users</h3>
        <p>
            <a asp-action="CreateUser">Create A New User</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Hourly Rate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserRole)</td>
                        <td>@Html.DisplayFor(modelItem => item.HourlyRate)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                            <a asp-action="GenerateReport" asp-route-id="@item.UserId">Report</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>