@model IEnumerable<PROG6212POE.Models.UserModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Users and Claims</h1>

<div class="row">
    <!-- Users Table -->
    <div class="col-md-6">
        <h3>Users</h3>
        <p>
            <a asp-action="CreateUser">Create A New User</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Hourly Rate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserRole)</td>
                        <td>@Html.DisplayFor(modelItem => item.HourlyRate)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                            <a asp-action="GenerateReport" asp-route-id="@item.UserId">Report</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Claims Table -->
    <div class="col-md-6">
        <h3>Claims</h3>
        <p>
            <a asp-action="CreateClaim" asp-controller="HR">Create A New Claim</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Claims != null)
                {
                    foreach (var claim in ViewBag.Claims)
                    {
                        <tr>
                            <td>@claim.Title</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.TotalAmount.ToString("C")</td>
                            <td>
                                <span class="badge @(claim.ClaimStatus == "Approved" ? "bg-success" : claim.ClaimStatus == "Rejected" ? "bg-danger" : "bg-warning")">
                                    @claim.ClaimStatus
                                </span>
                            </td>
                            <td>
                                <a asp-action="EditClaim" asp-route-id="@claim.ClaimId">Edit</a> |
                                <a asp-action="ClaimDetails" asp-route-id="@claim.ClaimId">Details</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No claims available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>