@using static PROG6212POE.Models.UserModel
@model IEnumerable<PROG6212POE.Models.UserModel>
@{
    ViewData["Title"] = "Index";

    // Safely get user role from session (prevents null reference issues)
    var role = Context?.Session?.GetString("UserRole");
}

<!-- Display message if user is not HR -->
@if (role != Role.HR.ToString())
{
    <div class="alert alert-warning text-center py-2 my-2 small">
        <i class="bi bi-shield-lock"></i> You don’t have access to all actions
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-3 text-primary fw-bold">
            <i class="bi bi-people-fill me-2"></i> Users
        </h1>

        <!-- Only HR can create new users -->
        @if (role == Role.HR.ToString())
        {
            <a asp-action="CreateUser" class="btn btn-success shadow-sm px-3">
                <i class="bi bi-person-plus-fill me-1"></i> Create New User
            </a>
        }
    </div>

    <div class="card shadow-sm border-light">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Hourly Rate</th>
                            <th style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            if (Model == null || !Model.Any())
                            {
                                <!-- No data fallback -->
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="bi bi-info-circle"></i> No users found.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="align-middle">
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.UserRole</td>
                                        <td>@($"R {item.HourlyRate}")</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.UserId" class="text-primary me-2">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.UserId" class="text-info me-2">
                                                <i class="bi bi-eye-fill"></i> Details
                                            </a>
                                            <a asp-action="GenerateReport" asp-route-id="@item.UserId" class="text-success">
                                                <i class="bi bi-file-earmark-text"></i> Report
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                        catch (Exception ex)
                        {
                            <!-- Error fallback row -->
                            <tr>
                                <td colspan="6" class="text-center text-danger fw-bold py-4">
                                    <i class="bi bi-exclamation-octagon-fill"></i> An error occurred while loading users.
                                </td>
                            </tr>

                            <!-- Optional dev-friendly error output (comment out for production) -->
                            <tr>
                                <td colspan="6" class="text-center text-muted small">@ex.Message</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
