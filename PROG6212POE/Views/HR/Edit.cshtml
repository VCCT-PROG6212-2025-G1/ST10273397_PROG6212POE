@using static PROG6212POE.Models.UserModel
@model PROG6212POE.Models.UserModel

@{
    ViewData["Title"] = "Edit User";
    var role = Context.Session.GetString("UserRole");
}

<!-- If user is not HR, display restricted access message and disable form -->
@if (role != Role.HR.ToString())
{
    <div class="alert alert-danger mt-3">
        <i class="bi bi-shield-lock-fill me-1"></i>
        You don’t have access to these actions.
    </div>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h1 class="mb-3 text-primary"><i class="bi bi-person-gear me-2"></i>Edit User</h1>
            <hr />

            <!-- User edit form -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">Update User Information</h4>
                        <small class="text-light">Make changes and click <strong>Save</strong> to update the user.</small>
                    </div>
                    <div>
                        <span class="badge bg-light text-primary">HR Only</span>
                    </div>
                </div>

                <div class="card-body position-relative">
                    <!-- Surround form in try/catch via graceful UI fail-safes -->
                    @try
                    {
                        <form asp-action="Edit" asp-controller="HR" asp-route-userId="@Model.UserId"class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row g-3">
                                <!-- First Name -->
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="FirstName" class="form-label">First Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                        </div>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="LastName" class="form-label">Last Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                        </div>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-12">
                                    <div class="form-group mb-3">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text"></span>
                                            <input asp-for="Email" class="form-control" placeholder="example@mail.com" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Password (Plain text discouraged – ideally hashed server-side) -->
                                <div class="col-12">
                                    <div class="form-group mb-3">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                            <input asp-for="Password" class="form-control" placeholder="Enter password" />
                                            <button class="btn btn-outline-secondary" type="button" tabindex="-1" title="Toggle visibility" onclick="(function(btn){ var inp = btn.previousElementSibling; if(!inp) return; if(inp.type==='text'){ inp.type='password'; btn.innerHTML='🔒'; } else { inp.type='text'; btn.innerHTML='👁️'; } })(this);">👁️</button>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- User Role -->
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="UserRole" class="form-label">Role</label>
                                        <select asp-for="UserRole" class="form-select">
                                            <option value="@Role.Lecturer">Lecturer</option>
                                            <option value="@Role.ProgCoord">Programme Coordinator</option>
                                            <option value="@Role.AcadMan">Academic Manager</option>
                                            <option value="@Role.HR">HR</option>
                                        </select>
                                        <span asp-validation-for="UserRole" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Hourly Rate -->
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="HourlyRate" class="form-label">Hourly Rate</label>
                                        <div class="input-group">
                                            <span class="input-group-text">R</span>
                                            <input asp-for="HourlyRate" class="form-control" placeholder="Enter hourly rate" />
                                        </div>
                                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button (disabled if non-HR) -->
                            <div class="form-group mt-3">
                                <input type="submit" value="Save" class="btn btn-primary"
                                       @(role != Role.HR.ToString() ? "disabled" : "") />
                                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
                            </div>
                        </form>
                    }
                    catch (Exception ex)
                    {
                        <!-- Exception fallback to prevent broken page rendering -->
                        <div class="alert alert-danger mt-3">
                            An unexpected error occurred while loading the form. Please try again later.<br />
                        </div>
                    }

                    @* If current user is not HR, visually indicate the form is read-only by placing a translucent overlay
                       (keeps original access-message logic intact while improving UX) *@
                    @if (role != Role.HR.ToString())
                    {
                        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(255,255,255,0.6); z-index: 10;"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
